{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "ResourceType",
    "description": "Metadata about a resources",
    "type": "object",
    "additionalItems": false,
    "properties": {
        "id": {
            "type": "string"
        },
        "schemas": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "string"
            }
        },
        "name": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "endpoint": {
            "type": "string"
        },
        "schema": {
            "type": "string"
        },
        "schemaExtensions": {
            "anyOf": [
                {
                    "$ref": "#/definitions/schemaExtensions"
                },
                {
                    "type": "array",
                    "description": "List of Schema Extensions ",
                    "items": {
                        "$ref": "#/definitions/schemaExtensions"
                    }
                }
            ]
        },
        "urn:gold:params:scim:schemas:extension:url:2.0:ResourceTypeFeatures": {
            "type": "object",
            "properties": {
              "disabled": {
                "type": "boolean"
              },
              "singletonEndpoint": {
                "type": "boolean"
              },
              "autoFiltering": {
                "type": "boolean"
              },
              "autoSorting": {
                "type": "boolean"
              },
              "etag": {
                "type": "object",
                "properties": {
                  "enabled": {
                    "type": "boolean"
                  }
                },
                "required": [
                  "enabled"
                ]
              },
              "endpointControl": {
                "type": "object",
                "properties": {
                  "disableCreate": {
                    "type": "boolean"
                  },
                  "disableGet": {
                    "type": "boolean"
                  },
                  "disableList": {
                    "type": "boolean"
                  },
                  "disableUpdate": {
                    "type": "boolean"
                  },
                  "disableDelete": {
                    "type": "boolean"
                  }
                },
                "required": [
                  "disableCreate",
                  "disableGet",
                  "disableList",
                  "disableUpdate",
                  "disableDelete"
                ]
              },
              "authorization": {
                "type": "object",
                "properties": {
                  "authenticated": {
                    "type": "boolean"
                  }
                },
                "required": [
                  "authenticated"
                ]
              }
            },
            "required": [
              "disabled",
              "singletonEndpoint",
              "autoFiltering",
              "autoSorting",
              "etag",
              "endpointControl",
              "authorization"
            ]
          }
    },
    "required": [
        "schemas",
        "meta",
        "name",
        "endpoint",
        "schema"
    ],
    "definitions": {
        "schemaExtensions": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "schema": {
                    "type": "string"
                },
                "required": {
                    "type": "boolean"
                }
            },
            "required": [
                "schema",
                "required"
            ]
        }
    }
}